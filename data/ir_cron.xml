<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Cron Job: Check High Value Orders -->
    <record id="ir_cron_smart_sales_notifier" model="ir.cron">
        <field name="name">Smart Sales Notifier: Check High Value Orders</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="state">code</field>
        <field name="code">model._cron_check_high_value_orders()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
        <field name="doall">False</field>
    </record>
</odoo>
